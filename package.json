    "test": "NODE_ENV=dev jest --runInBand",
    "test:watch": "NODE_ENV=dev jest --watch",
    "test:cov": "NODE_ENV=dev jest --coverage",
    "test:debug": "NODE_ENV=dev node --inspect-brk node_modules/.bin/jest --runInBand",
